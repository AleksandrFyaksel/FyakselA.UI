@model IEnumerable<FyakselA.UI.Models.Book>

@{
    ViewData["Title"] = "ShowBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ShowBooks</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().BookId) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Name) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Author) 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.BookId">Edit</a> 
                    @Html.ActionLink("Edit", "Edit", new { id = item.BookId }) | 
                    @Html.ActionLink("Details", "Details", new { id = item.BookId }) | 
                    @Html.ActionLink("Delete", "Delete", new { id = item.BookId }) 
                </td>
            </tr>
        }
    </tbody>
</table>