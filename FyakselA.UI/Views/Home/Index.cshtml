@model SelectList@{    ViewBag.Title = "Index";    ViewData["text"] = "Лабораторная работа №4";}<h1>@ViewData["text"]</h1><h2>Форма</h2><form method="post" asp-action="Index">    <div class="form-group">        <label for="selDemo">Выберите элемент:</label>        <select class="form-select" asp-items="Model" name="selDemo" id="selDemo"></select>    </div>    <!-- Блок с чекбоксами -->    <div class="mb-3">        <label>Выберите интересы:</label>        <div class="d-flex flex-column ms-4">                       <div class="form-check">                <input type="checkbox" id="interest1" name="interests" value="interest1" class="form-check-input">                <label for="interest1" class="form-check-label">Checkbox 1</label>            </div>            <div class="form-check">                <input type="checkbox" id="interest2" name="interests" value="interest2" class="form-check-input">                <label for="interest2" class="form-check-label">Checkbox 2</label>            </div>        </div>    </div>    <!-- Блок с радиокнопками -->    <div class="mb-3">        <label>Выберите опцию:</label>        <div class="d-flex flex-column ms-4">                        <div class="form-check">                <input type="radio" id="option1" name="options" value="option1" class="form-check-input">                <label for="option1" class="form-check-label">Опция 1</label>            </div>            <div class="form-check">                <input type="radio" id="option2" name="options" value="option2" class="form-check-input">                <label for="option2" class="form-check-label">Опция 2</label>            </div>            <div class="form-check">                <input type="radio" id="option3" name="options" value="option3" class="form-check-input">                <label for="option3" class="form-check-label">Опция 3</label>            </div>        </div>    </div>    <!-- Поля для ввода логина и пароля -->    <div class="mb-3 row">        <label for="inputEmail" class="col-sm-2 col-form-label">Email:</label>        <div class="col-sm-10">            <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Введите email" required>        </div>    </div>    <div class="mb-3 row">        <label for="inputPassword" class="col-sm-2 col-form-label">Пароль:</label>        <div class="col-sm-10">            <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Введите пароль" required>        </div>    </div>    <!-- Кнопка отправки -->    <div class="mb-3">        <button type="submit" class="btn btn-primary">Отправить</button>    </div></form>