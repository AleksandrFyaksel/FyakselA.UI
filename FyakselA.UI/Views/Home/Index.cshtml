@{    Layout = null; // Указываем, что это представление без общего макета    ViewData["Title"] = "Home Page"; // Устанавливаем заголовок страницы}<!DOCTYPE html><html lang="en"><head>    <meta charset="utf-8" />    <meta name="viewport" content="width=device-width, initial-scale=1.0" />    <title>@ViewData["Title"] - FyakselA.UI</title>    <!-- Подключение таблиц стилей -->    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />    <link rel="stylesheet" href="~/WebLabsV03.UI.styles.css" asp-append-version="true" />    <style>        /* Flexbox для растягивания страницы */        html, body {            height: 100%; /* Задаем высоту 100% для html и body */            margin: 0; /* Убираем отступы */            display: flex; /* Используем Flexbox */            flex-direction: column; /* Располагаем элементы по вертикали */        }        main {            flex: 1; /* Позволяем main занимать оставшееся пространство */        }    </style></head><body>    <header>        <div class="container">            <!-- Панель навигации -->            <nav class="navbar navbar-expand-md navbar-dark bg-dark">                <!-- Меню сайта -->                <a class="navbar-brand" href="#">WebLabsV03</a>                <div class="navbar-nav">                    <a class="nav-item nav-link active" href="#">Лб 1</a>                    <a class="nav-item nav-link" href="#">Каталог</a>                    <a class="nav-item nav-link" href="#">Администрирование</a>                </div>                <!-- Информация пользователя -->                <a href="#" class="navbar-text ms-auto">                    00,0 руб <i class="fa-solid fa-cart-shopping"></i> (0)                </a>                <div class="dropdown ms-4 nav-color">                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">                        User@gmail.com                        <img src="images/default-profile-picture.png" width="30" alt="User" class="rounded nav-color" />                    </button>                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">                        <li>                            <span class="dropdown-item-text">                                <img src="images/default-profile-picture.png" width="50" alt="User" class="rounded" />                                user@gmail.com                            </span>                        </li>                        <li><hr class="dropdown-divider"></li>                        <li>                            <form id="logoutForm" class="form-inline" action="#">                                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>                            </form>                        </li>                    </ul>                </div>                <!-- Информация пользователя - конец -->            </nav> <!-- Панель навигации - конец -->        </div><!-- container - конец -->    </header><!-- header - конец -->    <main class="container mt-5">        <h1>@ViewData["Title"]</h1>        <h2>Список</h2>        @* <ol type="A">            @foreach (var item in (SelectList)ViewBag.ItemList)            {                <li>@item.Text</li>            }        </ol> *@        <h2>Форма с элементами</h2>        <form action="/submit" method="post">            <div class="mb-3">                <label for="itemSelect" class="form-label">Выберите элемент:</label>                <select id="itemSelect" name="selectedItemId" class="form-select" asp-items="ViewBag.ItemList">                    <option value="">-- Выберите элемент --</option>                </select>            </div>            <!-- Блок с чекбоксами -->            <div class="mb-3 row">                <div class="col-sm-10 offset-sm-2">                    <div class="form-check">                        <input type="checkbox" id="interest1" name="interests" value="interest1" class="form-check-input">                        <label for="interest1" class="form-check-label">checkbox1</label>                    </div>                    <div class="form-check">                        <input type="checkbox" id="interest2" name="interests" value="interest2" class="form-check-input">                        <label for="interest2" class="form-check-label">checkbox2</label>                    </div>                </div>            </div>            <!-- Блок с радиокнопками -->            <div class="mb-3 row">                <div class="col-sm-10 offset-sm-2">                    <div class="d-flex">                        <div class="form-check me-3">                            <input type="radio" id="option1" name="options" value="option1" class="form-check-input">                            <label for="option1" class="form-check-label">radio 1</label>                        </div>                        <div class="form-check me-3">                            <input type="radio" id="option2" name="options" value="option2" class="form-check-input">                            <label for="option2" class="form-check-label">radio 2</label>                        </div>                        <div class="form-check">                            <input type="radio" id="option3" name="options" value="option3" class="form-check-input">                            <label for="option3" class="form-check-label">radio 3</label>                        </div>                    </div>                </div>            </div>                    <div class="mb-3 row">                <label for="inputLogin" class="col-sm-2 col-form-label">Логин:</label>                <div class="col-sm-10">                    <input type="text" id="inputLogin" name="login" class="form-control" placeholder="Введите логин" required>                </div>            </div>            <div class="mb-3 row">                <label for="inputPassword" class="col-sm-2 col-form-label">Пароль:</label>                <div class="col-sm-10">                    <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Введите пароль" required>                </div>            </div>            <button type="submit" class="btn btn-primary">Отправить</button>        </form>        </div>    </main>    <footer>        <div class="container">            <div class="navbar navbar-dark navbar-expand-md bg-dark">                <div class="navbar-nav ms-auto">                    <a class="nav-item nav-link" href="http://www.facebook.com">                        <i class="fa-brands fa-facebook-f fa-2x"></i>                    </a>                    <a class="nav-item nav-link" href="http://www.vk.com">                        <i class="fa-brands fa-vk fa-2x"></i>                    </a>                    <a class="nav-item nav-link" href="http://www.twitter.com">                        <i class="fa-brands fa-twitter fa-2x"></i>                    </a>                </div>            </div>            <span class="nav-color">Подвал страницы</span>        </div>    </footer>    <!-- Подключение файлов скриптов -->    <script src="~/lib/jquery/dist/jquery.min.js"></script>    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>    <script src="~/js/site.js" asp-append-version="true"></script></body></html>