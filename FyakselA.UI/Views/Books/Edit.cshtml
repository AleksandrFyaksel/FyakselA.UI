@model FyakselA.UI.Models.Book

@{
    ViewData["Title"] = "Edit"; // Установка заголовка страницы
    Layout = "~/Views/Shared/_Layout.cshtml"; // Указание макета
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <!-- Указание действия для формы и метод POST -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> <!-- Отображение ошибок валидации -->
            <input type="hidden" asp-for="BookId" /> <!-- Скрытое поле для передачи ID книги -->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label> <!-- Метка для поля "Name" -->
                <input asp-for="Name" class="form-control" /> <!-- Поле ввода для "Name" -->
                <span asp-validation-for="Name" class="text-danger"></span> <!-- Ошибка валидации для "Name" -->
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label> <!-- Метка для поля "Author" -->
                <input asp-for="Author" class="form-control" /> <!-- Поле ввода для "Author" -->
                <span asp-validation-for="Author" class="text-danger"></span> <!-- Ошибка валидации для "Author" -->
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> <!-- Кнопка для сохранения изменений -->
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a> <!-- Ссылка для возврата к списку книг -->
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> <!-- Подключение скриптов для валидации -->
}